<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
    允许Qwen3 TTS音频下载 (OSS使用HTTP协议)
    Qwen3 API返回的音频URL使用http://而非https://
    Android 9+ 默认阻止cleartext HTTP流量
    -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">oss-cn-shanghai.aliyuncs.com</domain>
    </domain-config>

    <!--
    其他所有域名保持Android默认安全策略
    只允许HTTPS流量
    -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
